# ================================
# ENVIRONMENT CONFIGURATION
# ================================
# Bu dosyayı .env olarak kopyalayın ve kendi değerlerinizi girin

# ================================
# DATABASE CONFIGURATION
# ================================
DB_PASSWORD=YourStrong@Passw0rd123
DB_SERVER=localhost
DB_NAME=DevApiDb
DB_USER=sa

# ================================
# API CONFIGURATION
# ================================
API_PORT=5102
API_URL=http://localhost:5102
ASPNETCORE_ENVIRONMENT=Development

# ================================
# WEB CONFIGURATION
# ================================
WEB_PORT=5202
NEXT_PUBLIC_API_URL=http://localhost:5102
NODE_ENV=development
NEXT_TELEMETRY_DISABLED=1

# ================================
# DOCKER CONFIGURATION
# ================================
COMPOSE_PROJECT_NAME=devapp
DOCKER_REGISTRY=ghcr.io

# ================================
# SECURITY
# ================================
JWT_SECRET=YourSuperSecretJWTKey123456789
ENCRYPTION_KEY=YourEncryptionKey123456789

# ================================
# MONITORING
# ================================
HEALTH_CHECK_INTERVAL=30s
LOG_LEVEL=Information

# ================================
# EXTERNAL SERVICES
# ================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# ================================
# FEATURE FLAGS
# ================================
ENABLE_SWAGGER=true
ENABLE_DETAILED_ERRORS=true
ENABLE_CORS=true 